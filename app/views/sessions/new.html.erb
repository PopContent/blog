<% provide(:title, "Log in") %>

<h1 class="textcenter margin-top40">Log in</h1>

<div class="container">
  <div class="col-md-6 col-md-offset-3 textcenter">
    <%= render 'shared/error_messages' %>
    <%= form_for :session, url: login_path, html: {class: "form-horizontal margin-bottom40", role: "form"} do |f| %>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :remember_me, class: "checkbox inline" do %>
      <%= f.check_box :remember_me %>
      <span>Lembrar de mim neste computador</span>
      <% end %>
    </div>

    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-custom" %>
    </div>

    <% end %>
  </div>
</div>