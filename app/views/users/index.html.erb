<h1 class="textcenter margin-top40">Usuários</h1>

<div class="container margin-bottom40">
<%= render 'shared/error_messages' %>
<table id="users-table" class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Perfil', user %></td>
        <td><%= link_to 'Excluir', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Novo Usuário', new_user_path, class: 'btn btn-custom right'%>

</div>


