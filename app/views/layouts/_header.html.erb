<!-- #header -->
<header id="header">

    <!-- #navigation -->
    <nav id="navigation" class="navbar">

        <!-- .container -->
        <div class="container">

            <div class="navbar-brand">
                <%= link_to root_path do%>
                    <%= image_tag("pop-content-logo.svg", :alt => "Logo") %>
                <% end %>
            </div>

            <ul class="nav navbar-nav">
                <% if params[:controller] != 'static_pages' %>
                    <li><a href="<%= root_path(anchor: 'header' ) %>" class="smooth-scroll">Home</a></li>
                    <li><a href="<%= root_path(anchor: 'e-book' ) %>" class="smooth-scroll">E-book</a></li>
                    <li><a href="<%= root_path(anchor: 'whats-app' ) %>" class="smooth-scroll">WhatsApp</a></li>
                    <li><a href="<%= root_path(anchor: 'about-us' ) %>" class="smooth-scroll">O Time</a></li>
                    <li class="active"><%= link_to 'Blog', blog_path%></li>
                <% else %>
                    <li class="active"><a href="#header" class="smooth-scroll">Home</a></li>
                    <li><a href="#e-book" class="smooth-scroll">E-book</a></li>
                    <li><a href="#whats-app" class="smooth-scroll">WhatsApp</a></li>
                    <li><a href="#about-us" class="smooth-scroll">O Time</a></li>
                    <li><%= link_to 'Blog', blog_path%></li>
                <% end %>
                <% if logged_in? %>
                  <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                      Admin
                    </a>
                    <ul class="dropdown-menu">
                      <li><%= link_to "Preferências", edit_user_path(current_user) %></li>
                      <li><%= link_to 'Usuários', users_path %></li>
                      <li><%= link_to "Blog", posts_path %></li>
                      <li class="divider"></li>
                      <li>
                        <%= link_to "Log out", logout_path, method: "delete" %>
                      </li>
                    </ul>
                  </li>
                <% end %>
            </ul>

        </div>
        <!-- .container end -->

    </nav>
    <!-- #navigation end -->

</header>
<!-- #header end -->
